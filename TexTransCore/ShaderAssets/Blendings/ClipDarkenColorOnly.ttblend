#include "./BlendColor.hlsl"
float4 ColorBlend(float4 BaseColor, float4 AddColor)
{
  if (BaseColor.a <= 0.0)
  {
    return AddColor;
  }
  if (AddColor.a <= 0.0)
  {
    return BaseColor;
  }
  float3 BlendColor = DarkenColorOnlyComposite(BaseColor.rgb, AddColor.rgb);
  return ClipAlphaBlending(BaseColor, AddColor, BlendColor);
}
